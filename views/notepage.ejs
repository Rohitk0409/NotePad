<%- layout('/layouts/boiyerlarcode.ejs') %>
<style>
  .main {
    padding: 2rem;
    padding-top: 6rem;
  }
  .btn {
    letter-spacing: 2px;
    background-color: orange;
    color: black;
  }
  .btn:hover {
    background-color: black;
    color: white;
  }
  a {
    text-decoration: none;
    color: black;
  }
  h4 {
    letter-spacing: 2px;
    color: orange;
  }
  p {
    letter-spacing: 1px;
  }
  span {
    color: orange;
    letter-spacing: 2px;
  }
  .optionB {
    width: 200px;
  }
</style>
<div class="main">
  <%if(message && message.length) {%>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%=message %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <% } %>
  <h4><%= d.title %></h4>
  <hr />
  <p><%=(d.content) %></p>
  <hr />
  <span>Last Update:&nbsp;<%=(d.date).toISOString().split('T')[0] %></span>

  <div class="mt-4">
    <div class="row optionB">
      <div class="col">
        <a href="/edit/<%=id%>/<%=d._id %>"
          ><button class="btn">Edit</button></a
        >
      </div>
      <div class="col">
        <form
          method="POST"
          action="/delete/<%=id %>/<%=d._id %>?_method=DELETE"
        >
          <button class="btn">Delete</button>
        </form>
      </div>
    </div>
  </div>
  <div></div>
</div>
